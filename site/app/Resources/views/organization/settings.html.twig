{% extends 'layout.html.twig' %}

{% block title %}
    {{ organization.getName() }} : {{ organization.getDisplayName() }} @ LibreCores: Settings
{% endblock %}

{% block pagepath %}Home &raquo; Organizations &raquo; {{ organization.getName() }} &raquo; Settings{% endblock %}

{% block content %}
<h1 class="organizationname">
  <a href="{{ path('librecores_project_repo_user_org_view',
  {'userOrOrganization': organization.getName()}) }}">{{ organization.getName() }}</a>: Settings</h1>

<div class="row">
<div class="col-sm-2">
  <ul class="list-group">
    <li class="list-group-item"><a href="{{ path('librecores_project_repo_user_org_view',
    {'userOrOrganization': organization.getName()}) }}">
      <i class="fa fa-bookmark fa-fw"></i>
      Organization
    </a></li>
    <li class="list-group-item active"><a href="#">
      <i class="fa fa-cogs fa-fw"></i>Settings
    </a></li>
  </ul>
  <br>
</div>

<div class="col-sm-10">

  {{ form_start(form) }}
  {{ form_errors(form) }}

  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
            <h3 class="card-title">Name</h3>
        </div>
        <div class="card-body">
          <p><i>The name of the organization.</i></p>
          {{  form_row(form.name, {'label': false}) }}
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Display Name</h3>
        </div>
        <div class="card-body">
          <p><i>The full name of the organization.</i></p>
          {{  form_row(form.displayName, {'label': false}) }}
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Description</h3>
        </div>
        <div class="card-body">
          <p><i>The description of the organization.</i></p>
          {{  form_row(form.description, {'label': false}) }}
        </div>
      </div>
    </div>
  </div>
  <br>
  {{ form_end(form) }}
</div>
</div>
{% endblock %}
